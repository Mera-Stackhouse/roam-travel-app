<div class="container">

  <!-- Page Heading -->
  <h1 class="my-4">Browse Posts
    <small>on Roam</small>
  </h1>

  <br>
  <div class='message'><%= flash[:message] %></div>
  <br>

  <%= form_tag('/search', method: :get) do %>
    <h5 class="form-inline"><%= label_tag "Filter by Location " %> &nbsp; &nbsp; <small>
    <%= select_tag :location_id, options_from_collection_for_select(Location.all, "id", "name"),  include_blank: "Select" %> &nbsp;
    <%= submit_tag "Go" %></small> </h5>
  <% end %>
  <br>


<% if @posts.empty? %>
<%= "Sorry there are no posts at that location, but you can make a " %>
<%= link_to "new post!", new_post_path %>
<% end %>



  <div class="row">


    <% @posts.each do |post| %>


      <div class="col-lg-4 col-sm-6 mb-4">
        <div class="card h-100">
          <a href="#"><img class="card-img-top" src="<%= post.photo_url %>" alt=""></a>
          <div class="card-body">
            <h4 class="card-title">
              <a href="#"><%= link_to post.title, post_path(post) %></a>
            </h4>
            <h5 class="card-user"><%= link_to post.user.username, user_path(post.user) %></h5>
            <p class="card-text"><%= post.description %></p>
          </div>
        </div>
      </div>

    <% end %>


  </div>
  <!-- /.row -->
