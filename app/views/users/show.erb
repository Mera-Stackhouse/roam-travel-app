<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">

      <ul class="posts">
        <!-- @posts.count -->
       <li><span><%= @posts.count %></span> posts</li>
       <li><span><%= 495 %></span> followers</li>
       <li><span><%= 345 %></span> following</li>
      </ul>
      <h2 class="username"><%= @user.username %></h2>
    </div>


    <!-- In images section: Each row of this section will present 3 images as below: -->
    <div class="user-images">
      <% @posts.each do |post|%>
        <div class="wrapper">
          <%=link_to post_path(post) do %>
          <div class="col-md-4">

          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="container">
    <div class="row">

        <% @posts.each do |post|%>


            <div class="col-md-4">
              <%=link_to post_path(post) do %>

            </div>
          <% end %>

      <% end %>
    </div>

  </div>
</div>
