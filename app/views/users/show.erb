


<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
			  <!-- LEFT: AVATAR HERE -->
        <div class="wrapper">
          <% if current_user.avatar.attached? %>
            <%= image_tag current_user.avatar %>
          <%end %>
        </div>
    </div>

    <div class="col-md-8 basic-info">
			<!-- RIGHT: USER INFORMATION HERE -->
      <div class="user-wrapper">
        <h2 class="username"><%= @user.username %></h2>
        <% if @user == current_user %>
        <a class="edit-profile" href="<%= edit_user_path(@user)%>">
          <button>Edit Profile</button>
        </a>
         <% end %>
      </div>
      <ul class="posts">
        <!-- @posts.count -->
       <li><span><%= @posts.count %></span> posts</li>
       <li><span><%= 495 %></span> followers</li>
       <li><span><%= 345 %></span> following</li>
      </ul>
      <h2 class="name"><%= @user.name %></h2>
    </div>


    <!-- In images section: Each row of this section will present 3 images as below: -->
    <div class="user-images">
      <% @posts.each do |post|%>
        <div class="wrapper">
          <%=link_to post_path(post) do %>
          <div class="col-md-4">
          <%=image_tag (post.image_url), class: "img-responsive" if post.image.attached? %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="container">
    <div class="row">

        <% @posts.each do |post|%>


            <div class="col-md-4">
              <%=link_to post_path(post) do %>
            <%=image_tag (post.image_url) if post.image.attached? %>
            </div>
          <% end %>

      <% end %>
    </div>



  </div>
</div>
